.b-contacts__item-inner
  .b-contacts__photo
    img.b-contacts__img(src!='<%= photo %>')
  .b-contacts__body
    .b-contacts__name <%= name %>
    | <% if (email) { %>
    .b-contacts__desc <%= email %>
    | <% } %>
    | <% if (phone) { %>
    .b-contacts__phone
      svg.b-contacts__phone-icon
        use(xlink:href='#icon_at-phpne')
      =' '
      .b-contacts__phone-num <%= phone %>
    | <% } %>

