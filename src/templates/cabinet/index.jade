  .page.with-subnavbar(data-page='cabinet')
    .tabs
      .page-content.tab(id='cabinet-schedule')
        .list-block
      .page-content.active.tab(id='cabinet-settings')
        .list-block
          ul
            li
              .item-content
                .item-inner
                  .item-title.label
                    | Уведомлять о
                    br
                    | событиях
                    br
                    | в моем
                    br
                    | расписании
                  .item-input
                    select
                      option за 10 минут
                      option за 20 минут
                      option за 30 минут
                      option за 1 час
            li
              .item-content
                .item-inner
                  .item-title.label Выбор смены
                  #shift-select.item-input
                    select
                      option Первая
                      option Вторая

