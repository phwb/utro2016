.navbar
  .navbar-inner
    .left
      a.back.link.b-back(href='#')
        svg.b-back__icon
          use(xlink:href='#icon_back')
    .center.sliding.navbar-title Площадки
    .right
      a.link.open-panel.b-nav-button(href='#')
        .b-nav-button__body
          .b-nav-button__item.b-nav-button__item_top
          .b-nav-button__item.b-nav-button__item_center
          .b-nav-button__item.b-nav-button__item_bottom
    .subnavbar.subnavbar-no-space
      .b-tab-nav
        a.tab-link.b-tab-nav__item(href='#place-desc') Описание
        a.tab-link.b-tab-nav__item(href='#place-schedule', class='active') Расписание
        a.tab-link.b-tab-nav__item(href='#place-contacts') Контакты
.pages
  .page.with-subnavbar.page-no-space(data-page='place-detail')
    .page-content
      .content-block
        .content-block-inner
          .tabs.b-tabs
            .tab.b-tabs__item(id='place-desc'):                     .b-tabs__content.b-tabs__content_page-bg
            .tab.b-tabs__item(id='place-schedule', class='active'): .b-tabs__content.b-tabs__content_nospace
            .tab.b-tabs__item(id='place-contacts'):                 .b-tabs__content.b-tabs__content_nospace

    include ../ui/toolbar.pug
